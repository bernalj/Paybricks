{
  "manifest_version": 3,
  "name": "Paybricks",
  "version": "0.1",
  "description": "Remove paywalls in News Websites.",
  "permissions": ["scripting", "storage", "activeTab"],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.elperiodico.com/*"],
      "css": [],
      "js": ["elperiodico/elperiodico.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://elpais.com/*"],
      "css": [],
      "js": ["elpais/elpais.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["elperiodico/*", "elpais/*"],
      "matches": ["<all_urls>"]
    }
  ]
}