{
  "manifest_version": 3,
  "name": "Paybricks",
  "version": "0.1",
  "description": "Remove paywalls in News Websites.",
  "permissions": ["scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.elperiodico.com/*",
    "*://elpais.com/*"
  ]
}